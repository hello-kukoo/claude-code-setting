{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {},
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Edit",
      "Glob",
      "Grep",
      "Read",
      "Write",
      "SlashCommand",
      "WebFetch",
      "WebSearch",
      "Task",
      "TodoWrite",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(git add:*)",
      "Bash(git log:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git commit:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(cat:*)",
      "Bash(fd:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(pnpm:build)",
      "Bash(pwd)",
      "Bash(rg:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "mcp__serena__list_dir",
      "mcp__arxiv-mcp__search_papers",
      "mcp__arxiv-mcp__download_paper",
      "mcp__arxiv-mcp__list_papers",
      "mcp__arxiv-mcp__read_paper"
    ],
    "deny": [
      "Bash(dd:*)",
      "Bash(fdisk:*)",
      "Bash(su:*)",
      "Bash(sudo:*)",
      "Bash(wget:*)",
      "Bash(curl:*)",
      "Read(.env.*)",
      "Read(id_ed25519)",
      "Read(id_rsa)",
      "Write(.env*)",
      "Write(**/secrets/**)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git push:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "elements-of-style@superpowers-marketplace": true,
    "document-skills@anthropic-agent-skills": false,
    "episodic-memory@superpowers-marketplace": false,
    "superpowers-developing-for-claude-code@superpowers-marketplace": false,
    "scientific-skills@claude-scientific-skills": true,
    "context7@claude-plugins-official": false,
    "learning-output-style@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
