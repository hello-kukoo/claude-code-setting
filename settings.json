{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false,
  "env": {},
  "permissions": {
    "allow": [
      "Edit",
      "Glob",
      "Grep",
      "Read",
      "Write",
      "SlashCommand",
      "WebFetch",
      "WebSearch",
      "Task",
      "TodoWrite",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(git add:*)",
      "Bash(git log:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(fd:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(pnpm:build)",
      "Bash(pwd)",
      "Bash(rg:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "mcp__serena__list_dir",
      "mcp__arxiv-mcp__search_papers",
      "mcp__arxiv-mcp__download_paper",
      "mcp__arxiv-mcp__list_papers",
      "mcp__arxiv-mcp__read_paper"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(dd:*)",
      "Bash(fdisk:*)",
      "Bash(su:*)",
      "Bash(sudo:*)",
      "Bash(wget:*)",
      "Read(.env.*)",
      "Read(id_ed25519)",
      "Read(id_rsa)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)"
    ]
  }
}
